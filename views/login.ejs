<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <link rel="icon" href="favicon.ico">
    <title>RMH | Log In</title>
  </head>
  <body>
    <!-- PAGE HEADER -->
    <h1 id="banner">Rogue Mushroom Hunter</h1>

    <!-- BOX FOR CONTENT -->
    <div id="box">
      <h2>Log in</h2>

      <!-- DECORATIVE IMAGE -->
      <img id="deco" src="./mushroom.png" alt="mushroom logo" />

      <!-- FORM DATA -->
      <form action="/login" method="post">

          <!-- MESSAGE  -->
          <div>
            <label id="message">
              <% if(message) {%>
              <h3><%= message %></h3>
              <% } %>
            </label>
          </div>

          <!-- USERNAME  -->
          <div>
            <input
              type="text"
              id="name"
              name="name"
              placeholder="Username"
              required
            />
          </div>

          <!-- PASSWORD  -->
          <div>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
          </div>

          <!-- SHOW/HIDE PASSWORD  -->
          <label class="subtext">
            <input type="checkbox" name="remember" onChange="pwToggle()" />
            Show password
          </label>
          <br />
          <br />
          
          <!-- SUBMIT  -->
          <button type="submit">Log in</button>
          
      </form>

      <!-- TO REGISTRATION  -->
      <div class="subtext">
        <br />
        
        Need an account?
        <a href="/register">Register</a>
        <br />
        <a href="/home">Go Back</a> 
      </div>
      <!-- TO HOME -->
      
    </div>

    <!-- PASSWORD TOGGLE SCRIPT  -->
    <script>
      function pwToggle() {
        let pwShow = document.getElementById("password");
        if (pwShow.type === "password") {
          pwShow.type = "text";
        } else {
          pwShow.type = "password";
        }
      }
    </script>
  </body>
</html>
